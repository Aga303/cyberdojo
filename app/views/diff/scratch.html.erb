
<script language="javascript" type="text/javascript"><!--

var diffs = <%= @diffs.to_json -%>;

$j(document).ready(function() {
  build_filenames();
});

function build_filenames() 
{
  var view = $j('#diff_sheet');

  view.save = function() { };

  var load_from = function(filename, diffed_lines, save) {
    return function() {
      view.save();
      view.html(diffed_lines);
      view.scrollTop(filename.scroll_top);
      view.scrollLeft(filename.scroll_left);
      view.save = save;
    };
  };

  var save_to = function(filename) {
    return function() {
      filename.scroll_top = view.scrollTop();
      filename.scroll_left = view.scrollLeft();
    };
  };
  
  for (var i = 0; i != diffs.length; i++) {
    var diff = diffs[i]
    var filename = $(diff.name);
    filename.onclick = load_from(filename, diff.content, save_to(filename));       
    filename.scroll_top = 0;
    filename.scroll_left = 0;
  }
}

//--></script>

<div class="panel">
  <%= render :partial => 'mock_filenames' -%>
</div>

<pre class="diffed_code"><div id="diff_sheet"></div></pre>

