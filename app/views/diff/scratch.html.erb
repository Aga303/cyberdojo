
<script language="javascript" type="text/javascript"><!--

var diffs = <%= @diffs.to_json -%>;

$j(document).ready(function() {
  build_filenames();
});

function build_filenames() 
{
  var view = $('diff_sheet');

  var load = function(diffed_lines) {
    return function() {
      // need to save scrollPos etc first
      view.innerHTML = diffed_lines;
      // now set saved scrollPos of this file, etc
    };
  };

  for (var i = 0; i != diffs.length; i++) {
    var diff = diffs[i]
    var filename = $(diff.name);
    filename.onclick = load(diff.content);    
  }
}

//--></script>

<div class="panel">
  <%= render :partial => 'mock_filenames' -%>
</div>

<pre class="diffed_code"><div id="diff_sheet"></div></pre>

