
<% tag_number = @traffic_lights_to_tag.length -%>

<table>
  <tr>
    <td colspan="2">
      <span class="small_title">
        <%= link_to ellided_name(@dojo.name, 20), 
             { :controller => :dashboard, 
               :action => :show_inflated, 
               :dojo_name => @dojo.name 
             }, 
             { :class => "title",
               :title => @dojo.name,
               :target => "_blank" 
             } 
        -%>
      </span>            
    </td>
  </tr>
  <tr>
    <td>
      <% if tag_number != 0-%>
        <%= unlinked_traffic_light(@traffic_lights_to_tag.last) -%>
      <% end -%>
    </td>
    <td>
      <%= avatar_image(@avatar.name, 50) -%>
    </td>
    <td>
      <span class="small_title"><%= @avatar.name.humanize -%></span>      
      <span class="small_title"><%= @kata.language -%></span>
      <span class="small_title"><%= @kata.name -%></span>
    </td>
  </tr>
</table>

