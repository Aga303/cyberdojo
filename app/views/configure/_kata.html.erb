
<td>
  &nbsp;&nbsp;Kata<b>?</b>
  <% @katas.each_with_index do |kata,index| -%>
    <div class="mid_tone fileset" 
         onclick='selectKata("<%=kata-%>", <%=index-%>);' >
      <input id="kata_<%=index-%>" 
             type="radio" 
             name="kata"
             <% if kata==@current_kata -%>
             checked="checked"
             <% end -%>
             value="<%=kata-%>" />
      <label><%= kata -%></label>
    </div>    
  <% end -%>
</td>
