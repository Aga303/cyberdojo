
<% post_message_options = {
  :url => { :controller => 'kata',
            :action => 'post_message',
            :dojo_name => @dojo.name,
            :avatar => 'server'
          },
  :with => "{ message: Field.getValue('message_text')}"
} -%>

<div id="message_panel">
  <table>
    <tr valign="top">
      <td class="panel">
        <table>
          <tr>
            <td>
               <%= avatar_image('server', 40) -%>
            </td>
          
            <td>
             <textarea cols=22" rows="2" name="message_text" id="message_text"></textarea>
            </td>
                       
            <td>
              <%= tag("input", 
                { :type => "button",
                  :class => "button",
                  :onclick => "#{remote_function(post_message_options)};$j('#message_text').val('');",
                  :name => "post_message",
                  :value => "Post",            
                }) -%>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    
    <tr>
      <td class="panel">
        <%= render :partial => 'messages' -%>
      </td>
    </tr>
    
  </table>
</div>
