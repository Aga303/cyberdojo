 
<h1 align="center">CyberDojo: <%= @dojo.name -%></h1>

<h4 align="center">
  <% if @languages.length == 1 -%> 
    <%= @languages[0] -%>, 
  <% end -%>
  <% if @katas.length == 1 -%> 
    <%= @katas[0] -%>
  <% end -%>
</h4>

<% post_message_options = {
  :url => { :controller => 'kata',
            :action => 'post_message',
            :dojo_name => @dojo.name,
            :avatar => 'compass'
          },
  :with => "{ message: Field.getValue('message_text')}"
} -%>
         
<table class="panel">
  <tr>
    <td>
      <%= tag("input", 
        { :type => "button",
          :class => "button",
          :onclick => "#{remote_function(post_message_options)};$j('#message_text').val('');",
          :name => "post_message",
          :value => "Post",            
        }) -%>
    </td>
    <td>
     <textarea cols=22" rows="2" name="message_text" id="message_text"></textarea>
    </td>
  </tr>
  <tr>
    <td colspan="2">
      <%= render :partial => 'dojo/messages' -%>  
    </td>
  </tr>
</table>

<%= periodically_call_remote :url => { :action => 'message_board_heartbeat',
                                       :dojo_name => @dojo.name
                                     }, 
                             :frequency => 10 -%>


