
<div id="banner">
  <h1 title="<%=@dojo.name-%>">
  
      <% size = 40 -%>
      <%= link_to image_tag("/images/avatars/cyber-dojo.png",
          :border => 0, :size => "#{size}x#{size}", :title => 'Home page'),
            :controller => :dojo,
            :action => :index,
            :dojo_name => @dojo.name %>

    <%= elided_name(@dojo.name, 25) -%>
  </h1>
  
  <h4> 
    <%= @dojo.language -%>,
    <%= @dojo.kata_name -%>,
    started <%= time_in_words(@dojo.age_in_seconds) %> ago
  </h4>
</div>


