
<script language="javascript" type="text/javascript"><!--

function resume(avatar_name) {
  $cd.postTo('/kata/edit', {
    dojo_name: "<%=@dojo.name-%>",
    avatar: avatar_name
  }, '_blank');  
  $cd.closeResumeDialog();
  return false;
}

//--></script>

<h1 title="<%=@dojo.name-%>">

    <% size = 40 -%>
    <%= link_to image_tag("/images/avatars/cyber-dojo.png",
        :border => 0, :size => "#{size}x#{size}", :title => 'Home page'),
          :controller => :dojo,
          :action => :index,
          :dojo_name => @dojo.name %>

  <%= elided_name(@dojo.name, 25) -%>
</h1>

<h4> 
  <%= @dojo.language -%>,
  <%= @dojo.kata_name -%>
</h4>

<div align="center">
  <table class="panel">
    <% index = 0 -%>
    <% size = 100 -%>
    <% (1..4).each do |_| -%>
    <tr>
      <% (1..4).each do |_| -%>
      <td>
        <% avatar_name = @all_avatar_names[index] -%>
        <% if @live_avatar_names.include?(avatar_name) -%>
          <input type='image'
                 onclick='return resume("<%=avatar_name-%>");'
                 class='avatar_image'
                 src="/images/avatars/<%=avatar_name-%>.jpg"
                 title="Resume <%=avatar_name.humanize-%>"
                 width="<%=size-%>"
                 height="<%=size-%>" />          
        <% else -%>
          <%= bw_avatar_image(avatar_name, size) -%>
        <% end -%>      
        <% index += 1 -%>
      </td>
      <% end -%>     
    </tr>
    <% end -%>
  </table>
  <h3>Click an animal to Resume-Coding</h3>
</div>
