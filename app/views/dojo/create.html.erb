
<script language="JavaScript"
        type="text/javascript"><!--

var languageCount = <%=@languages.length-%>;
var kataCount = <%=@katas.length-%>;

function showKata(index, choice) {
  var info = choice + '\n\n' + $j('#kata_info_' + index).val();
  $j('#kata_info').val(info);
}

function makeSelection(name, index, choice) { 
  var selection = $j('#' + name + '_' + index); 
  selection.attr('checked', true);
  if (name === 'kata') {   
    showKata(index, choice);  
  }
  setSaveButtonState();
}

function setSaveButtonState() {
  $j('#save_button').attr('disabled', !languageSelected() || !kataSelected());
}

function languageSelected() {
  for (var at = 0; at !== languageCount; at += 1) {
    if ($j('#language_' + at).attr('checked')) {
      return true;
    }
  }
  return false;
}

function kataSelected() {
  for (var at = 0; at !== kataCount; at += 1) {
    if ($j('#kata_' + at).attr('checked')) {
      return true;
    }
  }
  return false;
}

//--></script>

<form action="/dojo/save">

<input type="hidden"
       name="dojo_name" 
       id="dojo_name" 
       value="<%=@dojo.name%>" />

<h1 title="<%= @dojo.name%>">   
  <%= elided_name(@dojo.name, 40) %>
</h1>

<table align="center">
  <tr>
    <td valign="top">
      <table class="panel">
        <tr>
          <td>
            <div>
              <span class="choose_title">Katas</span>
            </div>
            
            <% @katas.each_with_index do |choice,index| -%>
              <div class="mid_tone fileset" 
                   onclick='makeSelection("kata", <%=index-%>, "<%=choice-%>");' >
                <input id="kata_<%=index-%>" 
                       type="radio" 
                       onclick='makeSelection("kata", <%=index-%>, "<%=choice-%>");'                      
                       name="kata" 
                       value="<%=choice-%>" />
                <label><%= choice -%></label>
              </div>    
            <% end -%>    
            
          </td>
          <td>&nbsp;</rd>
          <td>
            <textarea name="kata_info" 
                      id="kata_info"
                      cols="62" 
                      rows="24">
            </textarea>
          </td>          
        </tr>
      </table>
      
    </td>
    <td valign="top">
      <table class="panel">
        <tr>
          <td>
            <div class="choose_title">Languages</div>

            <% @languages.each_with_index do |choice,index| -%>
              <div class="mid_tone fileset"
                   onclick='makeSelection("language", <%=index-%>, "<%=choice-%>");'>
                <input id="language_<%=index-%>" 
                       type="radio" 
                       onclick='makeSelection("language", <%=index-%>, "<%=choice-%>");'
                       name="language" 
                      value="<%=choice-%>" />
                <label><%= choice -%></label>
              </div>    
            <% end -%>    
          </td>
        </tr>
      </table>
      
      <table>
        <tr>
          <td valign="top">
            <input id="save_button" 
                   class="main button"
                   type="submit" 
                   value="Save Config" 
                   name="save"
                   disabled/>
          </td>
        </tr>
      </table>        
    </td>
  </tr>
</table>

</form>

<% @katas.each_with_index do |choice,index| -%>
   <textarea style="display:none;" 
             name="kata_info_<%=index-%>"
             id="kata_info_<%=index-%>"><%=h @kata_info[choice] -%></textarea>
<% end -%>      


