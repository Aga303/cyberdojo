
<table cellpadding="2px">
  <tr>
    <td>
      <input type="image" 
             width="40" 
             height="40"
             title="Click to run kata.sh on the CyberDojo server"
             src="/images/PlayButton.svg.thumb.png"/>
    </td>

    <td id="run_tests_spinner" 
        style="display:none;"> 
      <span>
        <%= image_tag "spinner.gif" -%>
      </span>
    </td> 

    <% limited(@increments).reverse.each do |increment| -%>
    <td>
      <div id="inc"
           class="<%= increment[:outcome] -%> rounded increment">
         &thinsp;
         <span><%= increment[:number] -%>:<%= increment[:info] -%></span>
      </div>
    </td>
    <% end -%>

  </tr>
</table>

