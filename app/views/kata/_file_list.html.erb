
<div class="rounded panel">

<table>
  <% if !@kata.readonly -%>
    <tbody id="file-list">
  <% else -%>
    <tbody>       
  <% end -%>

    <% @manifest[:visible_files].sort.each do |filename,file| -%>
    <tr>
      <td>             
        <div <% if filename != 'kata.sh' -%>
                id="radioFilename"  
                title="Right-click=rename/delete"
             <% end -%>
             onclick='loadFile("<%=filename-%>")'>
          <input id="radio_<%=filename-%>" 
                 name="radio_filename"
                 type="radio"
                 value="<%=filename-%>"><%= filename -%>
        </div>
      </td>
    </tr>
    <% end -%>
  </tbody>
</table>

<br/>

<button type="button" id="new_file" onclick="newFile();">new file</button>

</div>

