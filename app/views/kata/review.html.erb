                    { :controller => :kata, 
                      :action => :review,
                      :dojo_name => "#{@dojo.name}",
                      :avatar => "#{@avatar.name}",
                      :tag => "#{@avatar_increments.length}" }, 
                    { :class => "title" } -%>
                  </td>                
                  <% end -%>
                </tr>
              </table>
