<table>
  <tr valign="top">
    <td>
      <%= render :partial => 'info_panel' -%>
      
      <div class="panel">
        <table>
          <tr>
            <td>
              <table>
                <tr>
                  <% if @increments.length != 0 -%>
                  <td>
                    <%= link_to "0", 
                    { :controller => :kata, 
                      :action => :review,
                      :dojo_name => "#{@dojo.name}",
                      :avatar => "#{@avatar.name}",
                      :tag => "0" }, 
                    { :class => "title" } -%>
                  </td>                
                  <% end -%>
                  <td>
                    <%= render :partial => 'prev_increment_button' -%>
                  </td>                
                  <td>
                    <% if @increments.length != 0 -%>
                      <%= traffic_light(@dojo.name, @avatar.name, @increments.last) -%>
