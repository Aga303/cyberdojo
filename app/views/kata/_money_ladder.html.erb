

<div id="money_ladder">

<% size = 27 -%>

<table>
  <% @money_ladder[:failed_rungs].each do |rung| -%>
  <tr>
    <td>
      <img src="/images/avatars/<%=rung[:avatar]-%>.jpg"
           width="<%=size-%>"
           height="<%=size-%>"
           title="<%=rung[:avatar]-%>" />
      <img src="/images/avatars/<%=rung[:avatar]-%>.jpg"
           width="<%=size-%>"
           height="<%=size-%>"
           title="<%=rung[:avatar]-%>" />      
    </td>
    <td class="money_rung failed amount">
      <%= rung[:amount] -%>
    </td>
  </tr>
  <% end -%>

  <% @money_ladder[:error_rungs].each do |rung| -%>
  <tr>
    <td>
      <img src="/images/avatars/<%=rung[:avatar]-%>.jpg"
           width="<%=size-%>"
           height="<%=size-%>"
           title="<%=rung[:avatar]-%>" />
      <img src="/images/avatars/<%=rung[:avatar]-%>.jpg"
           width="<%=size-%>"
           height="<%=size-%>"
           title="<%=rung[:avatar]-%>" />      
    </td>
    <td class="money_rung error amount">
      <%= rung[:amount] -%>
    </td>
  </tr>
  <% end -%>

  <% @money_ladder[:passed_rungs].each do |rung| -%>
  <tr>
    <td>
      <img src="/images/avatars/<%=rung[:avatar]-%>.jpg"
           width="<%=size-%>"
           height="<%=size-%>"
           title="<%=rung[:avatar]-%>" />
      <img src="/images/avatars/<%=rung[:avatar]-%>.jpg"
           width="<%=size-%>"
           height="<%=size-%>"
           title="<%=rung[:avatar]-%>" />      
    </td>
    <td class="money_rung passed amount">
      <%= rung[:amount] -%>
    </td>
  </tr>
  <% end -%>

  <tr>
    <td>&nbsp;
    </td>
    <td xclass="money_rung bank_button">

      <%= button_to_remote("Bank", :update => 'money_ladder',
                                   :url => { :action => 'bank',
                                             :dojo => @dojo.name }) -%>
    </td>
  </tr>

  <tr>
    <td>Balance
    </td>
    <td class="money_rung total amount">
      <%= @money_ladder[:balance] -%>      
    </td>
  </tr>

</table>

</div>

