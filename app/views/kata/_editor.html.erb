
<script language="javascript" type="text/javascript"><!--

$j(document).ready(function() {
  $cd.bindLineNumbers($j('#editor'), $j('#editor_line_numbers'));
  $cd.bindLineNumbers($j('#output'), $j('#output_line_numbers'));  
});

//--></script>

<div class="panel">
  <div id="editor_div">
    <table cellspacing="0" cellpadding="0">
      <tr>
        <td>
          <textarea name="editor_line_numbers"
                    id="editor_line_numbers">
          </textarea>
        </td>
        <td>
          <textarea name="editor" 
                    id="editor"
                    tab="<%=@tab-%>"
                    wrap="off">
          </textarea>
        </td>
      </tr>
    </table>
  </div>
  <div id="output_div">
    <table cellspacing="0" cellpadding="0">
      <tr>
        <td>
          <textarea name="output_line_numbers"
                    id="output_line_numbers">
          </textarea>
        </td>
        <td>
          <%= render :partial => 'output' -%>
          <%= render :partial => 'outcome' -%>
        </td>
      </tr>
    </table>
  </div>
</div>

