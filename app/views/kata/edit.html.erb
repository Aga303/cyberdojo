
<script language="javascript" type="text/javascript"><!--

$j(document).ready(function() {
  var editor = $j('#editor');
  editor.tabby({ tabString: editor.attr('tab') });
  rebuildFilenameList();
  loadFile("<%=@current_file-%>"); 

  editor.bind('keydown', 'Alt+r', function(event) {
    event.stopPropagation();
    event.preventDefault();
    runTests();
    return false;
  });
  editor.bind('keydown', 'Alt+f', function(event) {
    event.stopPropagation();
    event.preventDefault();
    loadNextFile();
    return false;
  });
  
  $j('#editor_tabs').tabs();
  $j('#editor_tabs').tabs('select', OUTPUT_TAB_INDEX);
});

//--></script>

<% form_remote_tag :url  => { :action => :run_tests,
                              :dojo_name => @dojo.name,
                              :avatar => @avatar.name
                            }, 
                   :before   => 'preRunTests();',
                   :complete => 'postRunTests();' do -%> 

  <table cellpadding="0" cellspacing="0">
    <tr valign="top">
      
      <td class="panel">
        <%= render :partial => 'info' -%>
      </td>
        
      <td class="panel">
        <%= render :partial => 'traffic_lights' -%>
      </td>
      
    </tr>
    
    <tr valign="top">
    
      <td>
        <div class="panel">
          <%= render :partial => 'fileops' -%>
          <%= render :partial => 'filenames' -%>
        </div>
        
        <div class="panel">
          <%= render :partial => 'messages' -%>
        </div>
      </td>
      
      <td>
        <%= render :partial => 'editor' -%>
      </td>
      
    </tr>
  </table>
  
  <%= periodically_call_remote :url => { :action => :heartbeat,
                                         :dojo_name => @dojo.name,
                                         :avatar => @avatar.name
                                       }, 
                               :frequency => @dojo.seconds_per_heartbeat -%>
                   
  <%= render :partial => 'hidden_file_contents' -%>

<% end -%>


