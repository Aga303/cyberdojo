
<form action='/kata/review'>
  <input type='hidden' name='dojo_name' id='dojo_name' value='<%= @dojo.name-%>'/> 
  <input type='hidden' name='avatar' id='avatar' value='<%=@avatar.name-%>' />
  <input type='hidden' name='tag' id='tag' value='<%= @traffic_lights_to_tag.length + 1-%>' />
  <button class="button"
          <% if @traffic_lights_to_tag.length < @all_traffic_lights.length -%>
          type="submit"
          id="next_button">
          <% else -%>
          type="button"
          disabled>
          <% end -%>
    <img src="/images/triangle.gif"
         width="30" 
         height="30"
         title="View next increment" />
  </button>
</form>

