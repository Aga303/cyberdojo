
<table cellpadding="0">
  <tr valign="top">
    <td>
      <%= render :partial => 'avatar_pair' -%>
      <span class="title">CyberDojo: <%= @dojo.name -%></span> 
      
      <% @kata.filesets.each do |name,value| -%>
        <span class="title"><%=name-%>: <%=value-%></span>
      <% end -%>
           
      <%= render :partial => 'filenames_panel' -%>
    </td>
    <td>
      <%= render :partial => 'editor_panel' -%>
    </td>
    <td rowspan=2>
      <%= render :partial => 'rotation' -%>
      <%= periodically_call_remote :url => { :action => 'rotation',
                                             :dojo => @dojo.name,
                                             :avatar => @avatar.name
                                           }, 
                                   :frequency => 5 -%>                
                   
      <%= render :partial => 'money_ladder' -%>
      <%= periodically_call_remote :url => { :action => 'money_ladder',
                                             :dojo => @dojo.name
                                           }, 
                                   :frequency => 5 -%>
    </td>
  </tr>
  <tr valign="top">
    <td>
       <table style="float:right;">
         <tr>
          <td>
            <%= render :partial => 'play_button' -%>
          </td>
         </tr>
         <tr>
          <td>
            <%= render :partial => 'increments_panel' -%>
          </td>
         </tr>
        </table>
    </td>
    <td>
      <%= render :partial => 'output' -%>
    </td>
  </tr>
</table>



