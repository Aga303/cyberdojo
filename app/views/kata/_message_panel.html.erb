
<div id="message_panel">
          
  <% post_message_options = {
    :url => { :controller => 'kata',
              :action => 'post_message',
              :dojo_name => @dojo.name,
              :avatar => @avatar.name
            },
    :with => "{ message: Field.getValue('message_text')}"
  } -%>
  
  <table class="panel">
    <tr>
      <td>
         <%= avatar_image(@avatar.name, 40) -%>
      </td>
    
      <td>
       <textarea cols=22" rows="2" name="message_text" id="message_text"></textarea>
      </td>
                 
      <td>
        <%= tag("input", 
          { :type => "button",
            :class => "button",
            :onclick => "#{remote_function(post_message_options)};$j('#message_text').val('');",
            :name => "post_message",
            :value => "Post",            
          }) -%>
      </td>
    </tr>
  </table>

  <div class="panel">
    <%= render :partial => 'dojo/messages' -%>  
  </div>

</div>

