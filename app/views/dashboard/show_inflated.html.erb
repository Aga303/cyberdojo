
<%= render :partial => 'dojo/banner' -%>

<table>
  <tr>
    <td>
      <%= render :partial => 'controls' -%>
    </td>
    <td>
      <%= render :partial => 'traffic_lights_inflated' -%>      
      <span class="small_title">
        &nbsp;Click a traffic light to view its code.
      </span>      
    </td>
  </tr>
</table>

<%= periodically_call_remote :url => { :action => :heartbeat,
                                       :dojo_name => @dojo.name
                                     }, 
                             :with => "{ secs_per_col: Field.getValue('secs_per_col')," +
                                      "  max_cols: Field.getValue('max_cols')" +
                                      "}",                                     
                             :frequency => 10 -%>

