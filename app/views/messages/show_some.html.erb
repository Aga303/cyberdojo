
<%= render :partial => 'dojo/title',
           :locals => { :title => 'Messages' } -%>

<%= render :partial => 'dojo/banner' -%>

<div align="center">
  <table class="panel">
    <tr>
      <td>
        <%= render :partial => 'post_button',
                   :locals => { :poster => 'compass' } -%>
      </td>
      <td>
        <%= render :partial => 'input_area' -%>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= render :partial => 'messages' -%>  
      </td>
    </tr>
  </table>
</div>

<%= periodically_call_remote :url => { :action => :heartbeat,
                                       :dojo_name => @dojo.name
                                     }, 
                             :frequency => 10 -%>


