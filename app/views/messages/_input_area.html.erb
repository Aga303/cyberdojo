
<script language="JavaScript"
        type="text/javascript"><!--

$j(document).ready(function() {
  $j('#message_text_input').keyup(function(event) {
    event.preventDefault();
    var message = $j('#message_text_input').val();
    var disabled = $j.trim(message) === "";
    $j('#post_message_button').attr('disabled', disabled);
    if (event.keyCode == 13) {
      if (!disabled)
        $j('#post_message_button').click();
      else
        resetMessageInput();
    }  
  });
});

function resetMessageInput() {
  $j('#message_text_input').val('');
  $j('#post_message_button').attr('disabled', true);  
}
//--></script>

<textarea name="message_text_input" 
          id="message_text_input">
</textarea>

