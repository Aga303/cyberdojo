
<% post_message_options = 
   {
     :url => { :controller => :messages,
               :action => :post,
               :dojo_name => @dojo.name,
               :poster => poster
             },
     :with => "{ message: Field.getValue('message_text_input') }"
   } -%>

<%= tag( :input, 
    { 
      :type => :button,
      :class => :button,
      :name => :post_message,
      :onclick => "#{remote_function(post_message_options)};$j('#message_text_input').val('');",
      :id => :post_message_button,
      :value => :Post,
      :title => "Post a message to everyone in the dojo" 
    }) -%>

